#!/bin/bash

conf_file="../conf/tweets-client.ini"

shopt -s extglob

while read line; do
	if [[ "$line" == *logs_dir* ]]
	then
  		logs_dir=${line##*=}
  		break
	fi
done < "$conf_file"

if [[ ! -z "$logs_dir" ]]
then
	cd "$(dirname "$PWD")"
	PYTHONPATH=$PYTHONPATH:`pwd`/lib ./bin/politwoops-worker.py --restart --images --output $logs_dir/log/worker.log >>$logs_dir/log/worker.err 2>&1 &
	echo $! >./worker.pid
fi
exit 0